<div class="pal">
    <div class="panel panel-info">
        <div class="panel-heading Bg-secondary">
            <h3 class="panel-title"><i class="i-project"></i> &nbsp;Create a New Project</h3>
        </div>
        <div class="panel-body bg-white">

            <form class="form-horizontal">


                <fieldset>

                    <legend>
                        <a href="#" class="pull-right btn btn-sm btn-primary" style="position:relative;top:-7px"><i class="i-plus"></i> &nbsp;Select By Service Provider</a>

                        <i class="i-destination"></i> &nbsp;Configure Destination Settings
                    </legend>



                    <div class="form-group">

                        <label for="select" class="col-lg-2 control-label">Server Type</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="select">
                                <option>Microsoft Office 365</option>
                                <option>Exchange Server 2003+</option>
                                <option>Microsoft Office 365 (China)</option>
                                <option>IMAP</option>
                                <option>Groupwise 7+</option>
                                <option>POP</option>
                                <option>Zimbra 6+</option>
                                <option>Lotus Notes 6.5+</option>
                                <option>Amazon S3 (archive)</option>
                                <option>Open-Xchange</option>
                                <option>Google Apps/Gmail</option>
                                <option>EML</option>
                            </select>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Use Administrator Credentials
                                </label>
                            </div>
                            <hr>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Administrator Username</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputEmail" placeholder="Administrator Username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label">Administrator Password</label>
                        <div class="col-lg-10">
                            <span class="input-group-btn">
                                <input type="password" class="form-control" id="inputPassword" placeholder="Administrator Password">
                            </span>
                        </div>
                    </div>





                    <div class="form-group">
                        <div class="col-lg-12 text-right">
                            <a href="source-settings.html" class="btn btn-default">Back</a>
                            <a href="new-project-summary.html" class="btn btn-primary">Next</a>
                        </div>
                    </div>


                </fieldset>
            </form>
        </div>
